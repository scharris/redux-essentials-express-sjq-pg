{
   "name": "reduxblog-server",
   "version": "1.0.0",
   "description": "",
   "main": "server.js",
   "scripts": {
      "build-db": "docker build -t reduxblog-pg ../db",
      "start-db": "npm run build-db && docker run -d --name reduxblog-pg --rm -p 127.0.0.1:5433:5432 --shm-size=256MB reduxblog-pg",
      "psql": "docker exec -it reduxblog-pg psql -U reduxblog",
      "gen-dbmd": "query-gen/scripts/generate-dbmd.sh ../db/conn-jdbc.props pg",
      "gen-app-queries": "npm run --prefix query-gen gen-queries -- --sqlDir=../generated-sql --tsQueriesDir=../src/db/generated/query-result-types",
      "gen-app-rels-md": "npm run --prefix query-gen gen-rels-md -- --tsRelsMdDir=../src/db/generated",
      "gen-sources": "npm run gen-app-queries && npm run gen-app-rels-md",
      "compile": "tsc --noEmit # (check whether server project compiles without writing any files)",
      "build-client-prod": "cd ../client && npm run build",
      "prebuild-server-dev": "npm run gen-sources",
      "build-server-dev": "webpack --config webpack/dev.nowatch.config.js",
      "prebuild-server-prod": "npm run gen-sources",
      "build-server-prod": "webpack --config webpack/prod.config.js",
      "build": "npm run build-client-prod && npm run build-server-prod",
      "start-dist": "node dist/server dist ../db/conn-pool.env dev.env",
      "start-server-dev": "npm run build-server-dev && npm run start-dist",
      "start": "npm run start-server-dev"
   },
   "keywords": [],
   "author": "",
   "license": "ISC",
   "dependencies": {
      "cors": "^2.8.5",
      "dotenv": "^10.0.0",
      "express": "^4.17.2",
      "helmet": "^4.6.0",
      "pg": "^8.7.1",
      "pg-pool": "^3.4.1",
      "zod": "^3.11.6"
   },
   "devDependencies": {
      "@types/cors": "^2.8.12",
      "@types/dotenv": "^8.2.0",
      "@types/express": "^4.17.13",
      "@types/helmet": "^4.0.0",
      "@types/node": "^16.11.14",
      "@types/pg": "^8.6.2",
      "@types/pg-pool": "^2.0.3",
      "clean-webpack-plugin": "^4.0.0",
      "copy-webpack-plugin": "^10.2.0",
      "ts-loader": "^9.2",
      "typescript": "^4.5.4",
      "webpack": "^5.65.0",
      "webpack-cli": "^4.9.1",
      "webpack-merge": "^5.8.0",
      "webpack-node-externals": "^3.0.0"
   }
}
